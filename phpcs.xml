<?xml version="1.0"?>
<ruleset name="WordPress Project Standards">
    <description>WordPress Coding Standards</description>

    <!-- What to scan -->
    <file>wp-content/plugins/hello-world-plugin/</file>
    
    <!-- Exclude patterns -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    
    <!-- How to scan -->
    <arg value="sp"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>
    
    <!-- Rules -->
    <rule ref="WordPress"/>
</ruleset>